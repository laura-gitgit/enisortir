{% extends 'base.html.twig' %}

{% block body %}

    <div class="crea">
    <h2>Ajouter une sortie</h2>
    {{ form_start(sortieForm) }}

    <div class="crea">Nom de la sortie : <br>{{ form_widget(sortieForm.nom) }}</div>
    <div class="crea">Date et heure de la sortie : <br>{{ form_widget(sortieForm.dateHeureDebut) }}</div>
    <div class="crea">Date limite d'inscription : <br>{{ form_widget(sortieForm.dateLimiteInscription) }}</div>
    <div class="crea">Nombre de places : <br>{{ form_widget(sortieForm.nbInscriptionsMax) }}</div>
    <div class="crea">Dur√©e (heure) : <br>{{ form_widget(sortieForm.duree) }}</div>

    <div class="crea">Description et infos : <br>{{ form_widget(sortieForm.infosSortie) }}</div>

    <div class="crea">Ville organisatrice : <br>{{ form_widget(sortieForm.lieu) }}
        <a href="{{ path('lieu_ajoutLieu') }}">Ajouter lieu</a>
    </div>
    <div class="crea">{{ form_widget(sortieForm.Enregistrer) }}</div>
    <div class="crea">{{ form_widget(sortieForm.Publier) }}</div>

    {{ form_end(sortieForm) }}

{% endblock %}