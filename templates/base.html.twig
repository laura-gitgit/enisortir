<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Eni sortir {% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        <link rel="stylesheet" href="{{ asset('css/cssLaura.css') }}">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
    <header>
        <div class="container_logo">
            <img src="{{ asset('images/logodurex.png') }}" alt="">
        </div>
    </header>
    <div class="header_home">
        {% if  app.user%}
            <a href="{{ path('_sorties') }}">Accueil</a>
            <a href="{{ path('profil_modif') }}">Mon profil</a>
            <a href="{{ path('app_logout') }}" title="logout">Se deconnecter</a>
{#            <p>Hello {{ app.user.prenom }}</p>#}
        {% endif %}

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    </div>
        {% block body %}{% endblock %}
    </body>
</html>
